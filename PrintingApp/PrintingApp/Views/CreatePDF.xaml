<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PrintingApp.Views.CreatePDF">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Enter Details" TextColor="White" FontSize="20"></Label>
            <Entry x:Name="Name" Placeholder="Name" WidthRequest="150"></Entry>
            <Entry x:Name="Address" Placeholder="Address" WidthRequest="150"></Entry>
            <Entry x:Name="Account" Placeholder="Account Number" WidthRequest="150"></Entry>
            <Button x:Name="GeneratePDF" BackgroundColor="Gray" TextColor="White" Text="Generate PDF"/>
            <Button x:Name="pay" BackgroundColor="Gray" TextColor="White" Text="Generate PDF"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>